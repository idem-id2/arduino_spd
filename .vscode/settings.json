{
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.(cs|xaml|json|csproj|sln|md|txt|ino|h|ps1|psm1)$",
        "notMatch": "(?i)(^|/)(bin|obj|debug|release)(/|$)|(\\.user$|\\.suo$)",
        "cmd": "powershell.exe -ExecutionPolicy Bypass -NoProfile -File \"${workspaceFolder}\\.vscode\\auto-commit.ps1\" \"${file}\"",
        "runIn": "backend",
        "runOn": "onSave"
      }
    ],
    "shell": true
  },
  "files.exclude": {
    "**/bin": true,
    "**/obj": true,
    "**/.vs": true,
    "**/.git": false
  },
  "files.watcherExclude": {
    "**/bin/**": true,
    "**/obj/**": true,
    "**/.vs/**": true,
    "**/.git/**": true,
    "**/node_modules/**": true
  },
  "dotnet.defaultSolution": "HexEditor.sln"
}
