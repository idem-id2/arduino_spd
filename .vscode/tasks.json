{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git: Auto Commit & Push",
      "type": "shell",
      "command": "git add -A && git commit -m 'Auto-save: ${input:commitMessage}' && git push",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Git: Commit Only",
      "type": "shell",
      "command": "git add -A && git commit -m '${input:commitMessage}'",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Git: Push",
      "type": "shell",
      "command": "git push",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "Git: Pull",
      "type": "shell",
      "command": "git pull",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Git: Status",
      "type": "shell",
      "command": "git status",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Enter commit message",
      "default": "Auto-save"
    }
  ]
}
