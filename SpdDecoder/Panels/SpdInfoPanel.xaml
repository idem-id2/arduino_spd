                                     IsReadOnly="True"/>
                            <TextBox x:Name="ModuleInfo_Capacity_Value"
                                     Grid.Column="1"
                                     Style="{StaticResource SpdInfoValueStyle}"
                                     Text="—"
                                     IsReadOnly="True"/>
                        </Grid>

                        <!-- Organization -->
