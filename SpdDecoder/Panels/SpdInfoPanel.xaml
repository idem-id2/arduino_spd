                            <TextBox x:Name="ModuleInfo_AddressMapping_Value"
                                     Grid.Column="1"
                                     Style="{StaticResource SpdInfoValueStyle}"
                                     Text="—"
                                     IsReadOnly="True"/>
                        </Grid>

                        <!-- Manufacturing Date -->
                        <Grid MinHeight="28" Margin="0,2,0,2" Background="{StaticResource ZebraEvenBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ModuleInfo_ManufacturingDate_Label"
                                     Grid.Column="0"
                                     Style="{StaticResource SpdInfoLabelStyle}"
                                     Text="Manufacturing Date"
                                     IsReadOnly="True"/>
                            <TextBox x:Name="ModuleInfo_ManufacturingDate_Value"
                                     Grid.Column="1"
                                     Style="{StaticResource SpdInfoValueStyle}"
                                     Text="—"
                                     IsReadOnly="True"/>
                        </Grid>

                        <!-- Manufacturing Location -->
                        <Grid MinHeight="28" Margin="0,2,0,2" Background="{StaticResource ZebraOddBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ModuleInfo_ManufacturingLocation_Label"
                                     Grid.Column="0"
