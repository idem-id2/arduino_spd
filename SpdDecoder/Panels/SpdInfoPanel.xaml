                        <Grid MinHeight="28" Margin="0,2,0,2" Background="{StaticResource ZebraOddBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="DramInfo_XmpRevision_Label"
                                     Grid.Column="0"
                                     Style="{StaticResource SpdInfoLabelStyle}"
                                     Text="XMP Revision"
                                     IsReadOnly="True"/>
                            <TextBox x:Name="DramInfo_XmpRevision_Value"
                                     Grid.Column="1"
                                     Style="{StaticResource SpdInfoValueStyle}"
                                     Text="—"
                                     IsReadOnly="True"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Copy Button at bottom -->
        <Button x:Name="CopyAllButton"
                Grid.Row="1"
                Content="Copy All Data"
                Click="CopyAllButton_Click"
                HorizontalAlignment="Right"
                Margin="0,4,0,0"
                MinWidth="140"
                Style="{StaticResource CommandButtonStyle}"/>
    </Grid>
</UserControl>
