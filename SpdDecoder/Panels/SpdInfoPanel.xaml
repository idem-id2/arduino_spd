                                     IsReadOnly="True"/>
                            <TextBox x:Name="ModuleInfo_RegisterBufferManufacturer_Value"
                                     Grid.Column="1"
                                     Style="{StaticResource SpdInfoValueStyle}"
                                     Text="—"
                                     IsReadOnly="True"/>
                        </Grid>

                        <!-- Register Model -->
                        <Grid MinHeight="28" Margin="0,2,0,2" Background="{StaticResource ZebraOddBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ModuleInfo_RegisterModel_Label"
                                     Grid.Column="0"
                                     Style="{StaticResource SpdInfoLabelStyle}"
                                     Text="*Register Model"
                                     IsReadOnly="True"/>
                            <TextBox x:Name="ModuleInfo_RegisterModel_Value"
                                     Grid.Column="1"
                                     Style="{StaticResource SpdInfoValueStyle}"
                                     Text="—"
                                     IsReadOnly="True"/>
                        </Grid>

                        <!-- Revision / Raw Card -->
                        <Grid MinHeight="28" Margin="0,2,0,2" Background="{StaticResource ZebraEvenBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ModuleInfo_RevisionRawCard_Label"
                                     Grid.Column="0"
                                     Style="{StaticResource SpdInfoLabelStyle}"
                                     Text="Revision / Raw Card"
                                     IsReadOnly="True"/>
                            <TextBox x:Name="ModuleInfo_RevisionRawCard_Value"
                                     Grid.Column="1"
                                     Style="{StaticResource SpdInfoValueStyle}"
                                     Text="—"
                                     IsReadOnly="True"/>
                        </Grid>

                        <!-- Address Mapping -->
                        <Grid MinHeight="28" Margin="0,2,0,2" Background="{StaticResource ZebraOddBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ModuleInfo_AddressMapping_Label"
