<UserControl x:Class="HexEditor.Database.DramPartNumberEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <Border Grid.Row="0" 
                Style="{StaticResource ToolbarPanelStyle}"
                Padding="8">
            <StackPanel Orientation="Horizontal">
                <Button Content="Добавить" 
                        Click="AddButton_Click"
                        Style="{StaticResource CommandButtonStyle}"
                        Margin="0,0,4,0"/>
                <Button Content="Удалить" 
                        Click="DeleteButton_Click"
                        Style="{StaticResource CommandButtonStyle}"
                        Margin="0,0,4,0"
                        x:Name="DeleteButton"/>
                <Button Content="Сохранить" 
                        Click="SaveButton_Click"
                        Style="{StaticResource CommandButtonStyle}"
                        Margin="0,0,4,0"/>
                <Button Content="Перезагрузить" 
                        Click="ReloadButton_Click"
                        Style="{StaticResource CommandButtonStyle}"
                        Margin="0,0,4,0"/>
                <Separator Margin="8,0"/>
                <TextBlock Text="База данных DRAM Part Numbers" 
                           Style="{StaticResource CardTitleStyle}"
                           Margin="4,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- DataGrid с записями -->
        <DataGrid x:Name="EntriesDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  SelectionChanged="EntriesDataGrid_SelectionChanged"
                  CellEditEnding="EntriesDataGrid_CellEditEnding"
                  Margin="8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Part Number" 
                                    Binding="{Binding PartNumber, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200"/>
                <DataGridTextColumn Header="Manufacturer" 
                                    Binding="{Binding Manufacturer, UpdateSourceTrigger=PropertyChanged}"
                                    Width="150"/>
                <DataGridTextColumn Header="Die Density (Gb)" 
                                    Binding="{Binding DieDensityGb, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
                                    Width="120"/>
                <DataGridTextColumn Header="Device Width" 
                                    Binding="{Binding DeviceWidth, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
                                    Width="100"/>
                <DataGridTextColumn Header="Die Count" 
                                    Binding="{Binding DieCount, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
                                    Width="80"/>
                <DataGridCheckBoxColumn Header="Multi Load Stack" 
                                        Binding="{Binding IsMultiLoadStack, UpdateSourceTrigger=PropertyChanged}"
                                        Width="120"/>
                <DataGridTextColumn Header="Die Info" 
                                    Binding="{Binding DieInfo, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200"/>
                <DataGridTextColumn Header="Package" 
                                    Binding="{Binding Package, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200"/>
                <DataGridTextColumn Header="Notes" 
                                    Binding="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статусная строка -->
        <Border Grid.Row="2" 
                Style="{StaticResource StatusBarPanelStyle}"
                Padding="8,4">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusTextBlock" 
                           Text="Готов"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           FontSize="12"
                           Margin="4,0"/>
                <TextBlock Text=" | " 
                           Foreground="{StaticResource SeparatorBrush}"
                           Margin="4,0"/>
                <TextBlock x:Name="DatabasePathText" 
                           Text="База данных: загрузка..."
                           Foreground="{StaticResource MutedTextBrush}"
                           FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

